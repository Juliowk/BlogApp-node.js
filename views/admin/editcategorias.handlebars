{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar categoria:</h3>

<div class="card">
  <div class="card-body">
    <form action="/adm/categorias/edit" method="post">
      <label for="nome">Nome:</label>
      <input
        class="form-control mb-3"
        type="text"
        name="nome"
        id="nome"
        placeholder="Nome da categorias"
        value="{{categoria.nome}}"
      />

      <label for="slug">Slug:</label>
      <input
        class="form-control mb-3"
        type="text"
        name="slug"
        id="slug"
        placeholder="Slug da categorias"
        value="{{categoria.slug}}"
      />

      <input type="hidden" name="id" value="{{categoria._id}}">

      <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>