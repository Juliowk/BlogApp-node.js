<h2>Lista de postagens:</h2>
<hr />
<a href="/adm/postagens/add">
  <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}

  <div class="card mt-3">
    <div class="card-body">
      <h2>{{titulo}}</h2>
      <p><strong>Descrição:</strong> {{descricao}}</p>
      <small><strong>Data:</strong> {{data}}</small>
      <br />
      <small><strong>Categoria:</strong> {{categoria.nome}}</small>
      <br />
      <a href="/adm/postagens/edit/{{_id}}"><button
          class="btn btn-success mt-3"
        >Editar postagem</button></a>

      <a href="/adm/postagens/deletar/{{_id}}"><button
          class="btn btn-danger mt-3"
        >Deletar postagem</button></a>
    </div>
  </div>

{{else}}
  <p>Nenhuma postagem</p>
{{/each}}