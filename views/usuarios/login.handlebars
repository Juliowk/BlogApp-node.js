<h3>Login:</h3>
<div class="card">
  <div class="card-body">
    <form action="/usuarios/login" method="post">
      <div class="form-group">
        <label for="email">E-mail:</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <label for="senha">Senha:</label>
        <input
          type="password"
          name="senha"
          id="senha"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-success">Entrar</button>
    </form>
  </div>
</div>